.picture-view image {
  width: 100%;
}
.content-view {
  padding: 20rpx;
  font-size: 28rpx;
}
.time-view {
  font-size: 24rpx;
  color: #778288;
  margin-top: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.swiper {
  height: 760rpx;
}
.swiper-view .swiper .swiper-item image {
  width: 100%;
  height: 680rpx;
}
.pl-view {
  padding: 20rpx;
}
.pl-view image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 100rpx;
  float: left;
}
.pl-view input {
  background-color: #f1f1f1;
  padding: 10rpx;
  font-size: 26rpx;
  border-radius: 10rpx;
  padding-left: 20rpx;
  float: left;
  margin-left: 20rpx;
  width: 60%;
}
.pl-view button {
  background-color: transparent;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #000000;
  width: 120rpx;
}
.cue-words {
  text-align: center;
  font-size: 28rpx;
  color: #778288;
  margin-top: 12rpx;
}
.comment-view {
  margin-top: 10rpx;
  padding: 20rpx;
}
.comment-view .owner-text {
  margin-right: 16rpx;
  color: #FFFFFF;
  font-size: 24rpx;
  background-color: #ffaa00;
  padding-left: 6rpx;
  padding-right: 6rpx;
  border-radius: 10rpx;
}
.comment-view image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 100rpx;
  float: left;
  margin-right: 20rpx;
}
.comment-view .comment-text view {
  font-size: 26rpx;
}
.comment-view .comment-text text {
  font-size: 22rpx;
  color: #7a7a7a;
  margin-left: 10rpx;
}
.comment-view .comment-child {
  display: flex;
  margin-left: 80rpx;
  margin-top: 20rpx;
}
.comment-view .comment-child view {
  font-size: 26rpx;
}
.comment-view .comment-child text {
  font-size: 22rpx;
  color: #7a7a7a;
  margin-left: 10rpx;
}
.user-view {
  width: 85%;
  height: 100rpx;
  margin: 0 auto;
  box-shadow: 0 0 9px 3px #eaeaea;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-top: 30rpx;
}
.user-view .title {
  float: left;
  font-size: 30rpx;
}
.user-view .collect-view {
  float: right;
  font-size: 26rpx;
  display: flex;
  margin-top: 26rpx;
}
.user-view .collect-view .collect-img {
  width: 45rpx;
  height: 45rpx;
}
.user-view .collect-view text {
  align-self: center;
  margin-left: 10rpx;
}
.user-view .user-text {
  clear: both;
  height: 144rpx;
}
.user-view .user-text image {
  width: 100rpx;
  height: 100rpx;
  float: left;
  border-radius: 100rpx;
}
.user-view .user-text .user-info {
  float: left;
  margin-left: 20rpx;
}
.user-view .user-text .user-info .is-real-name {
  font-size: 20rpx;
  border: 2rpx solid green;
  padding: 2rpx;
  width: 80rpx;
  color: green;
  border-radius: 14rpx;
  text-align: center;
  margin-top: 10rpx;
}
.user-view .user-text .user-info .num-view {
  margin-top: 10rpx;
  font-size: 24rpx;
}
.user-view .user-text .user-info .num-view .doing-num {
  color: #ff5500;
}
.user-view .user-text .user-info .num-view .done-num {
  color: #ff5500;
}

