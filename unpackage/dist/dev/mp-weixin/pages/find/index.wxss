.content {
  padding: 15rpx;
}
.background-view {
  background-image: url(https://img2.baidu.com/it/u=2729193597,1305969072&fm=26&fmt=auto);
  background-size: 100%;
  width: 100%;
  height: 400rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.background-view view {
  font-size: 50rpx;
  color: #FFFFFF;
  margin: 0 auto;
}
.card-view {
  margin-left: 20rpx;
  margin-top: -90rpx;
}
.card-view .card:first-child {
  background-color: #FFAFCC;
}
.card-view .card:nth-child(2) {
  background-color: #FF9900;
}
.card-view .card {
  float: left;
  width: 280rpx;
  height: 140rpx;
  margin: 16rpx;
  border-radius: 20rpx;
  padding: 22rpx;
}
.card-view .card .card-title {
  font-size: 32rpx;
  color: #FFFFFF;
}
.card-view .card .card-content {
  margin-top: 20rpx;
  font-size: 22rpx;
  color: #FFFFFF;
}
.filter-view .city-view {
  font-size: 28rpx;
  margin-top: 12rpx;
  padding-left: 10rpx;
  display: flex;
  align-items: center;
  float: left;
  height: 48rpx;
}
.filter-view .city-view image {
  width: 30rpx;
  height: 30rpx;
}
.filter-view .select-view {
  float: right;
  height: 70rpx;
}
.content-view {
  width: 100%;
  height: 350rpx;
  box-shadow: 0 0 9px 3px #cee1eb;
  margin: 0 auto;
  border-radius: 20rpx;
  margin-top: 30rpx;
  clear: both;
}
.content-img {
  width: 270rpx;
  height: 270rpx;
  margin-left: 22rpx;
  margin-top: 40rpx;
  border-radius: 10rpx;
}
.content-content {
  display: flex;
  flex-direction: column;
  height: 300rpx;
  justify-content: center;
  padding-left: 30rpx;
  padding: 20rpx;
}
.cue-words {
  text-align: center;
  font-size: 28rpx;
  color: #778288;
  margin-top: 12rpx;
}
.addIcon {
  position: fixed;
  bottom: 60rpx;
  right: 40rpx;
}
.addIcon image {
  width: 70rpx;
  height: 70rpx;
}
.content-text {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  line-clamp: 3;
  -webkit-box-orient: vertical;
}

