.content {
  padding: 20rpx;
}
.content-view {
  width: 100%;
  height: 300rpx;
  box-shadow: 0 0 9px 3px #cee1eb;
  margin: 0 auto;
  border-radius: 20rpx;
  margin-top: 30rpx;
}
.content-view .content-img {
  width: 250rpx;
  height: 240rpx;
  margin-left: 22rpx;
  margin-top: 40rpx;
  border-radius: 10rpx;
}
.content-view .content-content {
  display: flex;
  flex-direction: column;
  height: 300rpx;
  justify-content: center;
  padding-left: 30rpx;
}
.content-view .content-content .logo {
  width: 120rpx;
  height: 50rpx;
  background-color: #fca400;
  position: relative;
  left: 300rpx;
  top: -52rpx;
  border-radius: 0 20rpx 0 20rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 50rpx;
  color: #FFFFFF;
}
.content-view .content-content .content-text {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.content-view .content-content .note {
  margin-top: 4rpx;
}
.content-view .content-content .note text {
  font-size: 12px;
  margin: 10rpx;
  padding-left: 8rpx;
  padding-right: 8rpx;
  border-radius: 30rpx;
  color: #ffffff;
}
.cue-words {
  text-align: center;
  font-size: 28rpx;
  color: #778288;
  margin-top: 12rpx;
}

