.content {
  padding: 30rpx;
}
.user-view {
  background-color: #f8a500;
  padding: 100rpx;
  height: 100rpx;
}
.user-view .img-view {
  float: left;
}
.user-view .img-view image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 20rpx;
}
.user-view .name-view {
  float: left;
  margin-left: 40rpx;
  color: #FFFFFF;
}
.user-view .name-view .name-text {
  float: left;
  font-size: 32rpx;
}
.user-view .name-view .love-view {
  float: left;
  margin-top: 50rpx;
  font-size: 24rpx;
}
.user-view .name-view .chat-img {
  width: 50rpx;
  height: 50rpx;
  float: right;
}
.content > .content-view {
  width: 100%;
  height: 300rpx;
  box-shadow: 0 0 9px 3px #cee1eb;
  margin: 0 auto;
  border-radius: 20rpx;
  margin-top: 40rpx;
}
.content > .content-view .content-img {
  width: 250rpx;
  height: 240rpx;
  margin-left: 22rpx;
  margin-top: 40rpx;
  border-radius: 10rpx;
}
.content > .content-view .content-content {
  display: flex;
  flex-direction: column;
  height: 300rpx;
  justify-content: center;
  padding-left: 30rpx;
}
.content > .content-view .content-content .logo {
  width: 120rpx;
  height: 50rpx;
  background-color: #fca400;
  position: relative;
  left: 270rpx;
  top: -52rpx;
  border-radius: 0 20rpx 0 20rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 50rpx;
  color: #FFFFFF;
}
.content > .content-view .content-content .content-text {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}
.content > .content-view .content-content .note {
  margin-top: 4rpx;
}
.content > .content-view .content-content .note text {
  font-size: 12px;
  margin: 10rpx;
  padding-left: 8rpx;
  padding-right: 8rpx;
  border-radius: 30rpx;
  color: #ffffff;
}
.cue-words {
  text-align: center;
  font-size: 28rpx;
  color: #778288;
  margin-top: 12rpx;
}
.typeView {
  margin-left: -20rpx;
  margin-top: 20rpx;
}
.content-area {
  margin-top: 25rpx;
}
.content-area .content-view {
  clear: both;
  border-top: 2rpx solid #d0e3ec;
  margin-bottom: 30rpx;
}
.content-area .content-view view:first-child {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content-area .content-view view:nth-child(2) {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
}
.content-area .content-view view:nth-child(3) {
  height: 100%;
  margin-left: -10rpx;
}
.content-area .content-view view:nth-child(3) image {
  width: 30%;
  height: 200rpx;
  float: left;
  margin: 10rpx;
  border-radius: 10rpx;
}
.content-area .content-view view:first-child image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
}
.content-area .content-view view:first-child view {
  margin-left: -370rpx;
}

