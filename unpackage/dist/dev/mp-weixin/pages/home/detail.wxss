.content {
  padding: 20rpx;
}
.swiper-view .swiper {
  height: 700rpx;
}
.swiper-view .swiper .image-wrapper image {
  width: 100%;
  height: 100%;
}
.time-view {
  margin-top: 20rpx;
  margin-left: -20rpx;
}
.time-view text {
  font-size: 22rpx;
  color: #778288;
  margin: 20rpx;
}
.desc-view {
  width: 95%;
  height: 120rpx;
  border: 4rpx solid #ffaa7f;
  margin: 0 auto;
  padding: 15rpx;
  margin-top: 30rpx;
}
.desc-view view {
  margin: 10rpx;
}
.desc-view view text {
  margin: 8rpx;
  font-size: 24rpx;
  padding-left: 8rpx;
  padding-right: 8rpx;
  border-radius: 30rpx;
}
.story-title {
  margin-top: 30rpx;
  height: 40rpx;
  border-left: 6rpx solid #F58418;
  padding-left: 20rpx;
  color: #F58418;
}
.user-title {
  margin-top: 30rpx;
  height: 40rpx;
  border-left: 6rpx solid #F58418;
  padding-left: 20rpx;
  color: #F58418;
  margin-left: 20rpx;
}
.story {
  margin-top: 20rpx;
  font-size: 24rpx;
}
.condition-title {
  margin-top: 30rpx;
  height: 40rpx;
  border-left: 6rpx solid #F58418;
  padding-left: 20rpx;
  color: #F58418;
}
.condition {
  margin-top: 20rpx;
  font-size: 24rpx;
}
.condition view {
  margin-top: 10rpx;
}
.bottom-view {
  width: 100%;
  height: 112rpx;
  display: flex;
  align-items: center;
  padding: 20rpx;
  position: fixed;
  bottom: 0;
  background: #FFFFFF;
  border-top: 1px solid #e5e5e5;
}
.bottom-view .love-view,
.bottom-view .index-view {
  float: left;
  text-align: center;
  font-size: 25rpx;
  margin: 30rpx;
}
.bottom-view .love-view image,
.bottom-view .index-view image {
  width: 50rpx;
  height: 50rpx;
}
.bottom-view .confirm-btn {
  float: left;
  border-radius: 40rpx;
  background-color: #F8A323;
  width: 400rpx;
  height: 84rpx;
  line-height: 84rpx;
  margin: 20rpx;
  color: #FFFFFF;
  font-size: 28rpx;
}
.user-view {
  width: 85%;
  height: 250rpx;
  margin: 0 auto;
  box-shadow: 0 0 9px 3px #eaeaea;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-top: 30rpx;
}
.user-view .title {
  float: left;
  font-size: 30rpx;
}
.user-view .collect-view {
  float: right;
  font-size: 26rpx;
  display: flex;
}
.user-view .collect-view .collect-img {
  width: 45rpx;
  height: 45rpx;
}
.user-view .collect-view text {
  align-self: center;
  margin-left: 10rpx;
}
.user-view .user-text {
  clear: both;
  height: 144rpx;
}
.user-view .user-text image {
  width: 100rpx;
  height: 100rpx;
  float: left;
  border-radius: 100rpx;
}
.user-view .user-text .user-info {
  float: left;
  margin-left: 20rpx;
}
.user-view .user-text .user-info .is-real-name {
  font-size: 20rpx;
  border: 2rpx solid green;
  padding: 2rpx;
  width: 80rpx;
  color: green;
  border-radius: 14rpx;
  text-align: center;
  margin-top: 10rpx;
}
.user-view .user-text .user-info .num-view {
  margin-top: 10rpx;
  font-size: 24rpx;
}
.user-view .user-text .user-info .num-view .doing-num {
  color: #ff5500;
}
.user-view .user-text .user-info .num-view .done-num {
  color: #ff5500;
}
.user-view .user-btn {
  clear: both;
  margin-top: 30rpx;
}
.user-view .user-btn button {
  width: 300rpx;
  height: 74rpx;
  line-height: 74rpx;
  float: left;
  font-size: 28rpx;
  border-radius: 40rpx;
  background: #FF7E93;
  color: #FFFFFF;
}
.user-view .user-btn image {
  width: 60rpx;
  height: 60rpx;
  margin-left: 40rpx;
}

