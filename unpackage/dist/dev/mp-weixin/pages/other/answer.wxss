page {
  height: 100%;
  background-color: #ececec;
}
.content {
  height: 100%;
  background-color: #ececec;
  padding-bottom: 40rpx;
}
.top-img-view {
  background-image: url(https://pet-life.oss-cn-beijing.aliyuncs.com/images/other/login_background.png);
  width: 100%;
  height: 360rpx;
}
.main-view {
  width: 92%;
  height: 1000rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  margin-top: -40rpx;
  box-shadow: 0 0 2rpx 2rpx #FFFFFF;
  background-color: #FFFFFF;
  position: relative;
}
.main-view .loading-view {
  text-align: center;
  font-size: 30rpx;
  color: #ffaa00;
}
.main-view .my-view {
  padding: 40rpx;
  font-size: 30rpx;
}
.main-view .my-view .my-answer {
  float: left;
}
.main-view .my-view .record {
  float: right;
}
.main-view .title-view {
  text-align: center;
  font-size: 28rpx;
  color: #acacac;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}
.main-view .subject-view {
  font-size: 32rpx;
  text-align: left;
  width: 80%;
  margin: 0 auto;
  line-height: 50rpx;
}
.main-view .option-view {
  margin-top: 200rpx;
}
.main-view .option-view button {
  width: 80%;
  border-radius: 50rpx;
  font-size: 30rpx;
  margin-top: 40rpx;
}
.main-view .bottom-view {
  position: absolute;
  bottom: 20rpx;
  left: 40%;
  font-size: 28rpx;
  color: #bfbfbf;
}

