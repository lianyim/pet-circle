.content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 30rpx;
}
.sign_conent_box {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 0;
}
.sign_conent_box .sign_conent {
  width: 686rpx;
  background: white;
  border-radius: 20rpx;
  padding: 40rpx 32rpx;
  box-sizing: border-box;
  background-image: url(https://img2.baidu.com/it/u=3629823039,2494968196&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=938);
}
.sign_conent_box .sign_conent .sign_conent_title {
  width: 100%;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}
.sign_conent_box .sign_conent .sign_conent_title .sign_conent_title_span {
  color: #ff6526 !important;
}
.sign_conent_box .sign_conent .sign_list_aligns {
  width: 100%;
  padding: 48rpx 0 64rpx 0;
  box-sizing: border-box;
}
.sign_conent_box .sign_conent .sign_list_aligns .scroll-view_H {
  width: 100%;
  display: flex;
  white-space: nowrap;
}
.sign_conent_box .sign_conent .sign_list_aligns .scroll-view_H .scroll_view_items {
  display: inline-block;
}
.sign_conent_box .sign_conent .sign_list_aligns .scroll-view_H .scroll_view_itemsv {
  display: flex;
}
.sign_conent_box .sign_conent .sign_list_aligns .scroll-view_H .scroll_view_item .scroll_view_item_img_box {
  width: 108rpx;
  height: 108rpx;
  position: relative;
  border: 1rpx solid #bf8d46;
  border-radius: 10rpx;
}
.sign_conent_box .sign_conent .sign_list_aligns .scroll-view_H .scroll_view_item .scroll_view_item_img_box .scroll_view_item_top {
  font-size: 24rpx;
  color: #bf8d46;
  font-weight: bold;
  position: absolute;
  top: 32rpx;
  width: 100%;
  text-align: center;
  z-index: 1;
}
.sign_conent_box .sign_conent .sign_list_aligns .scroll-view_H .scroll_view_item .scroll_view_item_img_box .scroll_view_item_bottom {
  font-size: 20rpx;
  color: #cbb47d;
  position: absolute;
  bottom: 18rpx;
  left: 36rpx;
  z-index: 2;
}
.sign_conent_box .sign_conent .sign_list_aligns .scroll-view_H .scroll_view_item .scroll_view_item_tips {
  width: 108rpx;
  text-align: center;
  font-size: 26rpx;
  padding-top: 16rpx;
  color: #333333;
}
.sign_conent_box .sign_conent .sign_list_aligns .scroll-view_H .scroll_view_item .scroll_view_item_img {
  width: 108rpx;
  height: 108rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}
.sign_conent_box .sign_conent .sign_list_aligns .scroll-view_H .scroll_xian {
  width: 64rpx;
  height: 2rpx;
  background: #ffe4d9;
  margin-top: 52rpx;
}
.sign_conent_box .sign_conent .sign_conent_btn {
  width: 100%;
  border-radius: 45rpx;
  background: linear-gradient(270deg, #fcae3a 0%, #f15d25 100%);
  color: #ffffff;
  text-align: center;
  padding: 22rpx 0;
  font-size: 32rpx;
}

